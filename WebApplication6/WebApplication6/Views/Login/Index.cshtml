@model WebApplication6.Models.LoginModel
@{
    ViewBag.Title = "Index";
}

<style>
    #login-div {
        position: absolute;
        left: 40%;
        top: 40%;
        border: 1px solid #ccc;
        padding: 10px 10px;
    }
</style>

<div id="login-div">

    @using (Html.BeginForm("Authorzion", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <table>
            <tr>
                <td></td>
                <th style="text-decoration:underline">登入</th>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.UserName)
                </td>
                <td>
                    @Html.EditorFor(model => model.UserName/*, new { htmlAttributes = new { @required = "required" } }*/)
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr>
            <td>
                @Html.LabelFor(model => model.UserPassword)
            </td>
            <td>
                @Html.EditorFor(model => model.UserPassword/*, new { htmlAttributes = new { @required = "required" } }*/)
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <font color="red">@Html.DisplayFor(model => model.LoginErrorMessage)</font>
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" name="name" value="登入" />
                <input type="reset" name="name" value="清除" />
            </td>
        </tr>
    </table>
    }

</div>
